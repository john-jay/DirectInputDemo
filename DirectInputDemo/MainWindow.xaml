<Window x:Name="ControllerWindow" x:Class="DirectInputDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectInputDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="707">
    <Grid x:Name="ControllerGrid" Margin="0,0,-8,0">
        <TextBox x:Name="eventsDisplay" HorizontalAlignment="Left" Height="206" Margin="42,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="612"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="24" Margin="42,27,0,0" TextWrapping="Wrap" Text="Events" VerticalAlignment="Top" Width="157"/>
        <Button x:Name="clearButton" Content="Clear" HorizontalAlignment="Left" Margin="378,36,0,0" VerticalAlignment="Top" Width="75" Click="clearButton_Click"/>

    </Grid>
</Window>
